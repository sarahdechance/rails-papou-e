<div class="container mt-5 p-5 border img-thumbnail">
<div class="row">
</div>
  <div class="card-offer">
    <p><%= link_to "Retour aux offres", offers_path %></p>
    <h2><%= @offer.name %></h2>
    <p>Rating :<%= @offer.user.rating.to_i %>/5</p>
    <%= cl_image_tag @offer.user.avatar.attached? ? offer.user.avatar.key : 'smiling_forest_girl_juuyws', heigth: 850, width: 850, crop: :fill %>
    <h3 class="mt-5"><strong>Description:</strong></h3>
    <p><%= @offer.description %></p>
    <p>Nam quibusdam, quos audio sapientes habitos in Graecia, placuisse opinor mirabilia quaedam;</p>

    <p>
    <%= link_to "Retourner aux offres", offers_path %>
    <%= link_to "Edit the Papouïe offer", edit_offer_path(@offer) %>
    </p>
    <div class="container bg-light p-4 offset-md-4 ml-4 mt-5" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 500px; rounded">
    <div class="container bg-light p-4 offset-md-4" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 500px; rounded">
    <% if current_user && @offer.user_id == current_user.id %>
        <%= link_to "Modifie ta Papouille", edit_offer_path(@offer), class: "btn-decoration btn btn-secondary" %>
        <%= link_to "Supprime ta papouille",
        offer_path(@offer), class: "btn-decoration btn btn-secondary",
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    <% else %>
      <h2 class="text-center text-black">Réservez des papouilles avec <%= @offer.user.first_name.capitalize %></h2>
      <h4 class="text-center mb-3">A partir de <%= @offer.hourly_price %>€ / jour</h4>
      <%= simple_form_for [@offer, @booking],
                          html: {
                            class: "form-booking",
                            data: {
                              controller: 'flatpickr'
                            }
                          } do |f| %>
        <%= f.input :start_date,
                    as: :string,
                    input_html: {
                      data: {
                        flatpickr_target: "startDateInput",
                      }
                    }%>
        <%= f.input :end_date,
                    as: :string,
                    input_html: {
                      class: 'd-none',
                      data: {
                        flatpickr_target: "endDateInput",
                      }
                    }%>
        <%= f.submit "Envoyer ma demander", class: "btn btn-flat"%>
      <% end %>

    <% end %>
    </div>
  </div>
</div>

