    <%= form_tag class: "row g-3 pt-0 d-flex" do %>
      <div class="col-md-12 text-black p-2 pt-0">
        <%= label_tag :hourly_price, "À quel tarif ?", class: "form-label" %>
        <%= text_field_tag :hourly_price, params[:hourly_price], class: "form-control", placeholder: "Le prix pour tes papouilles" %>
      </div>
      <div class="col-md-12 text-black  p-2 pt-0">
        <%= label_tag :date, "Date", class: "form-label" %>
        <%= text_field_tag :date, params[:date], class: "form-control", placeholder: "JJ/MM/AAAA" %>
      </div>


      <div class="col-md-12 text-black  p-2 pt-0">
        <%= label_tag :availability_start, "À partir de quelle heure ?", class: "form-label" %>
        <%= text_field_tag :availability_start, params[:availability_start], class: "form-control", placeholder: "HH:MM" %>
      </div>

      <div class="col-md-12 text-black  p-2 pt-0">
        <%= label_tag :availability_end, "Jusqu'à quelle heure ?", class: "form-label" %>
        <%= text_field_tag :availability_end, params[:availability_end], class: "form-control", placeholder: "HH:MM" %>
      </div>

      <div class="col-md-12 text-black p-2 pt-0">
        <%= label_tag :description, "Pourquoi choisir tes papouilles ?", class: "form-label" %>
        <%= text_field_tag :description, params[:description], class: "form-control", placeholder: "Description" %>
      </div>


  <%= submit_tag "Envoyer", class: "mt-5 btn btn-secondary btn-lg btn-block w-100" %>

</div>
    <% end %>



